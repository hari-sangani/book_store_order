= form_with(model: publisher) do |form|
  - if publisher.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(publisher.errors.count, "error")
        prohibited this publisher from being saved:
      %ul
        - publisher.errors.each do |error|
          %li= error.full_message
  %div
    = form.label :name, style: "display: block"
    = form.text_field :name
  %div
    = form.label :active, style: "display: block"
    = form.check_box :active
  %div
    = form.submit
