            %hr/
            %h4= t '.product_details'
            %ul
              %li
                %strong
                  = t '.publisher'
                  \:
                = @book.publisher.name
              %li
                %strong
                  = t '.published_date'
                  \:
                = @book.publish_date
              %li
                %strong
                  = t '.language'
                  \:
                = @book.language
              %li
                %strong
                  = t '.paperback'
                  \:
                = @book.paperback
              %li
                %strong ISBN No. :
                = @book.isbndb
