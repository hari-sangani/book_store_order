= form_with(model: cart) do |form|
  - if cart.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(cart.errors.count, "error")
        prohibited this cart from being saved:
      %ul
        - cart.errors.each do |error|
          %li= error.full_message
  %div
    = form.label :user_id, style: "display: block"
    = form.text_field :user_id
  %div
    = form.label :book_id, style: "display: block"
    = form.text_field :book_id
  %div
    = form.submit
